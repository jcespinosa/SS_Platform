<% provide(:title, 'Iniciar sesión') %>

<div class="mainContainer container">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <strong>Iniciar sesi&oacute;n</strong>
      </div>
      <div class="panel-body">
      <%= form_for(:session, url: sessions_path, :html => { :class => 'form form-horizontal'}) do |f| %>
        <div class="form-group">
          <%= f.label :username, 'Nombre de usuario: ', class: 'col-sm-4 control-label' %>
          <div class="col-sm-7">
            <%= f.text_field :username, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, 'Contraseña: ', class: 'col-sm-4 control-label' %>
          <div class="col-sm-7">
            <%= f.password_field :password, class: 'form-control' %>
          </div>
        </div>

      </div>

      <div class="panel-footer">
        <div class="form-group centered">
          <%= f.submit 'Iniciar sesión', class: 'btn btn-large btn-primary' %>
          <spap><%= link_to 'o crea una nueva cuenta', signup_path %></span>
        </div>
      </div>

      <% end %>

      </div>
    </div>
  </div>
</div>
