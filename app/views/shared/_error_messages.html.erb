<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <p>
      <strong>The form contains <%= pluralize(@user.errors.count, "error") %>.</strong>
    </p>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
