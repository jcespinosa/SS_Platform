<script>
  $(document).ready(function(){
    $('span.label-default').tooltip({
      title: 'El proyecto acaba de ser creado y no contiene archivos ni parámetros para su procesamiento',
      placement: 'right',
      trigger: 'hover'
    });

    $('span.label-info').tooltip({
      title: 'El proyecto se esta configurando y se estan subiendo los archivos para procesarlo',
      placement: 'right',
      trigger: 'hover'
    });

    $('span.label-primary').tooltip({
      title: 'El proyecto se esta procesando',
      placement: 'right',
      trigger: 'hover'
    });

    $('span.label-default').tooltip({
      title: 'Hubo un error al procesar el proyecto',
      placement: 'right',
      trigger: 'hover'
    });

    $('span.label-success').tooltip({
      title: 'El proyecto fue procesado exitosamente, puedes ver los resultados',
      placement: 'right',
      trigger: 'hover'
    });

    $('a#delete_project').tooltip({
      title: 'Eliminar proyecto',
      placement: 'bottom',
      trigger: 'hover'
    });

    $('a#edit_project').tooltip({
      title: 'Editar información del proyecto',
      placement: 'bottom',
      trigger: 'hover'
    });

    $('a.delete_file').tooltip({
      title: 'Eliminar archivo',
      placement: 'bottom',
      trigger: 'hover'
    });

    $('a.edit_file').tooltip({
      title: 'Editar información del archivo',
      placement: 'bottom',
      trigger: 'hover'
    });
  });
</script>

<h4>
  <%= link_to current_user.email, projects_user_path(current_user) %> / <strong><%= @project.name %></strong>
  <%= link_to @project, method: :delete, data: { confirm: '¿Estas seguro de eliminar éste proyecto?' }, :id => 'delete_project', class: 'btn btn-xs btn-danger pull-right' do %>
    <span class="glyphicon glyphicon-trash"></span>
  <% end %>
  <%= link_to edit_project_path(@project), :id => 'edit_project', class: 'btn btn-xs btn-default pull-right' do %>
    <span class="glyphicon glyphicon-pencil"></span>
  <% end %>
</h4>

<hr>

<p>
  <%= truncate(@project.description, length: 100) %>
</p>

<hr>

<p>
  <strong>Status: </strong>
  <% if @project.status == 'Nuevo' %>
    <span class="label label-default">Nuevo</span>
  <% elsif @project.status == 'En construcción' %>
    <span class="label label-info">En construccion</span>
  <% elsif @project.status == 'Procesando' %>
    <span class="label label-primary">Procesando</span>
  <% elsif @project.status == 'Error' %>
    <span class="label label-danger">Error</span>
  <% elsif @project.status == 'Terminado' %>
    <span class="label label-success">Terminado</span>
  <% else %>
    <span class="label label-default">...</span>
  <% end %>
</p>

<hr>
