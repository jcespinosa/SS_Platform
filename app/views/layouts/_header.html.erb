<script>
  $(document).ready(function(){
    $('a#new_project').tooltip({
      title: 'Crear nuevo proyecto',
      placement: 'bottom',
      trigger: 'hover'
    });

    $('a#edit_user').tooltip({
      title: 'Editar mi perfil',
      placement: 'bottom',
      trigger: 'hover'
    });

    $('a#signout').tooltip({
      title: 'Cerrar sesion',
      placement: 'bottom',
      trigger: 'hover'
    });

    $('a#all_users').tooltip({
      title: 'Ver todos los usuarios',
      placement: 'bottom',
      trigger: 'hover'
    });
  });
</script>

<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">...</a>
    </div>

    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Inicio', root_path %></li>
      </ul>
      <ul class="nav navbar-nav pull-right">
        <% if signed_in? %>
          <li>
            <%= link_to current_user do %>
              <span class="glyphicon glyphicon-user"></span>
              <strong><%= current_user.username %></strong>
            <% end %>
          </li>
          <li>
            <%= link_to '#' do %>
              <span class="badge">
                <span class="glyphicon glyphicon-inbox"></span>
                10
              </span>
            <% end %>
          </li>
          <li>
            <%= link_to new_project_path, :id => 'new_project'  do %>
              <span class="glyphicon glyphicon-folder-open"></span>
            <% end %>
          </li>
          <li>
            <%= link_to edit_user_path(current_user), :id => 'edit_user' do %>
              <span class="glyphicon glyphicon-cog"></span>
            <% end %>
          </li>
          <li>
            <%= link_to signout_path, method: 'delete', :id => 'signout' do %>
              <span class="glyphicon glyphicon-log-out"></span>
            <% end %>
          </li>
          <% if current_user.admin? %>
            <li>
              <%= link_to users_path, :id => 'all_users' do %>
                <span class="glyphicon glyphicon-list"></span>
              <% end %>
          </li>
          <% end %>
        <% else %>
          <li>
            <%= link_to signin_path do %>
              <span class="glyphicon glyphicon-log-in"></span>
              Iniciar sesion
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>